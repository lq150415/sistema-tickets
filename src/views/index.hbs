<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Tickets</h1>
        </div>
        <div class="card-body">
            {{#if tickets}}
                <ul class="list-group">
                    {{#each tickets}}
                        <li class="list-group-item d-flex justify-content-between align-items-center"><b>{{tipo}}</b> 
                        {{hora}} 
                        {{fecha}} 
                        <a href="./delete-ticket/{{@key}} " class="btn btn-danger">Borrar</a></li>
                    {{/each}}
                </ul>
            {{else}}
            No hay tickets :)
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-ticket" method="POST">
                <div class="form-group">
                    <input type="text" name="tipo" placeholder="Tipo de ticket" class="form-control" autofocus>
                </div>
                <button class="btn btn-primary btn-block">Registrar ticket</button>
            </form>
        </div>
    </div>
</div>